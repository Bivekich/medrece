---
import Layout from "../layouts/Layout.astro";
import { sanityClient } from "sanity:client";

const getSuccessBlocksQuery = `*[_type == "successBlock"]{
  name,
  number,
  description
}`

const getDirectorInfoQuery = `*[_type == "directorInfo"]{
  photo { asset-> { url } },
  fullName,
  description
}[0]`

const getTeachersQuery = `*[_type == "teacher"]{
  photo { asset-> { url } },
  fullName,
  position,
  date,
  description
}`

const successBlocks = await sanityClient.fetch(getSuccessBlocksQuery)
const director = await sanityClient.fetch(getDirectorInfoQuery)
const teachers = await sanityClient.fetch(getTeachersQuery)
---

<Layout>
  <section class="bg-white p-8">
    <h1 class="text-8xl font-bold text-center mb-8 text-[#000C5F]" style="font-family: 'Days One', sans-serif;">Наши успехи</h1>
    <div class="grid grid-cols-1 lg:grid-cols-2 pag-8 mb-16">
      {successBlocks.map(block => (
        <div class="text-center p-6 shadow-lg rounded-lg bg-[#000C5F]">
          <p class="font-[Geologica] my-2 text-3xl text-white">{block.name}</p>
          <h2 class="font-[Geologica] text-5xl font-bold text-white">{block.number}</h2>
          <p class="font-[Geologica] mt-2 text-3xl text-white">{block.description}</p>
        </div>
      ))}
    </div>

    <h2 class="text-8xl font-bold text-end mb-8 text-[#000C5F]" style="font-family: 'Days One', sans-serif;">Наш директор</h2>
    <div class="flex flex-col md:flex-row items-center md:items-start mb-16">
      <div class="w-full md:w-1/2">
        <img src={director.photo.asset.url} alt="Директор" class="rounded-lg shadow-lg">
      </div>
      <div class="w-full md:w-1/2 md:pl-8 mt-8 md:mt-0">
        <h3 class="font-[Geologica] text-2xl font-semibold">{director.fullName}</h3>
        <p class="font-[Geologica] mt-4">{director.description}</p>
      </div>
    </div>

    <h2 class="text-8xl font-bold text-start mb-8 text-[#000C5F]" style="font-family: 'Days One', sans-serif;">Преподовательский состав</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 pag-8">
      {teachers.map(teacher => (
        <div class="bg-[#000C5F] p-6 rounded-lg shadow-lg">
          <img src={teacher.photo.asset.url} alt={teacher.fullName} class="w-full h-120 object-cover rounded-md">
          <div class="p-4">
            <h3 class="text-xl text-center font-semibold font-[Geologica] text-white">{teacher.fullName}</h3>
            <div class="flex flex-row w-full">
              <p class="font-[Geologica] mt-2 text-[#C8C8C8] text-start mr-12">{teacher.position}</p>
              <p class="font-[Geologica] mt-2 text-[#C8C8C8] text-end">{teacher.date} г.р.</p>
            </div>
            <p class="mt-2 text-white font-[Geologica] text-xs">{teacher.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>