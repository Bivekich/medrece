---
import Layout from "../layouts/Layout.astro";
import { sanityClient } from "sanity:client";

const query = `*[_type == "news"] | order(date desc) {
  _id,
  title,
  date,
  "imageUrl": image.asset->url,
  summary
}`;

const newsItems = await sanityClient.fetch(query);
---

<Layout>
  <section class="p-6 font-[Geologica]">
    <h1 class="text-4xl md:text-6xl font-bold text-center text-[#000C5F] mb-8" style="font-family: 'Days One', sans-serif;">
      Новости
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {newsItems.map((news) => (
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
          {news.imageUrl && (
            <img src={news.imageUrl} alt={news.title} class="w-full h-48 object-cover" />
          )}
          <div class="p-4">
            <h2 class="text-xl font-semibold text-[#000C5F]" style="font-family: 'Days One', sans-serif;">
              {news.title}
            </h2>
            <p class="text-sm text-gray-500 mb-2">{new Date(news.date).toLocaleDateString()}</p>
            <p class="text-lg text-gray-700 mb-4">{news.summary}</p>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>
