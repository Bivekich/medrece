---
import { sanityClient } from "sanity:client";

const query = `*[_type == "schoolInfo"][0]{
  image {
    asset->{
      _id,
      url
    }
  },
  quote,
  author
}`;

const getDocumentsQuery = `*[_type == "schoolDocument"] | order(order asc) {
  title,
  documentType,
  "fileUrl": file.asset->url,
  files[] {
    fileName,
    "fileUrl": file.asset->url,
    title
  },
  content
}`;


const documents = await sanityClient.fetch(getDocumentsQuery);
const schoolInfo = await sanityClient.fetch(query);
---

<div class="flex flex-col md:flex-row items-stretch gap-8 p-6 font-[Geologica]">
  <!-- Левый блок -->
  <div class="w-full md:w-1/3 bg-gradient-to-r from-[#000C5F] to-[#02138A] p-6 rounded-lg shadow-lg relative">
    <div class="relative">
      <h3
        class="text-lg font-semibold text-white mb-4 flex items-center cursor-pointer"
        on:click="toggleList"
        id="toggleButton"
      >
        <!-- Стрелка слева от текста заголовка -->
        <div class="mr-4 flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-white rotate-90 transition-transform"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            id="arrowIcon"
            style="transform-origin: center;"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7"></path>
          </svg>
        </div>
        <div>
          <span class="block">Сведения об</span>
          <span class="block">образовательной организации</span>
        </div>
      </h3>

      <!-- Список документов, отображающийся по клику -->
      <div
        class="absolute left-0 bottom-0 mb-12 z-10 bg-white text-[#000C5F] rounded-lg shadow-lg p-4 max-h-96 overflow-auto opacity-0 transition-opacity"
        id="documentList"
      >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {documents.map(doc => (
            <li class="list-none">
              <a
                href={`/preview?fileUrl=${encodeURIComponent(doc.fileUrl || '')}&title=${encodeURIComponent(doc.title)}&documentType=${encodeURIComponent(doc.documentType)}&files=${encodeURIComponent(JSON.stringify(doc.files || []))}&content=${encodeURIComponent(doc.content || '')}`}
                class="flex items-center text-blue-600 hover:underline"
              >
                <span class="material-icons mr-2">
                  {doc.documentType === 'file' ? 'insert_drive_file' :
                   doc.documentType === 'fileList' ? 'folder' : 'description'}
                </span>
                {doc.title}
              </a>
            </li>
          ))}
        </div>
      </div>
    </div>

    <div class="space-y-4 mt-6">
      <a href="/abiturient" class="flex items-center text-white bg-blue-800 rounded-lg p-3 border border-blue-500 hover:bg-blue-700 transition">
        <span class="material-icons mr-2">school</span> Абитуриенту
      </a>
      <a href="/student" class="flex items-center text-white bg-blue-800 rounded-lg p-3 border border-blue-500 hover:bg-blue-700 transition">
        <span class="material-icons mr-2">group</span> Студенту
      </a>
      <a href="/news" class="flex items-center text-white bg-blue-800 rounded-lg p-3 border border-blue-500 hover:bg-blue-700 transition">
        <span class="material-icons mr-2">newspaper</span> Новости
      </a>
      <a href="/photo-video" class="flex items-center text-white bg-blue-800 rounded-lg p-3 border border-blue-500 hover:bg-blue-700 transition">
        <span class="material-icons mr-2">photo_camera</span> Фото и видео
      </a>
      <a href="/mediaInfo" class="flex items-center text-white bg-blue-800 rounded-lg p-3 border border-blue-500 hover:bg-blue-700 transition">
        <span class="material-icons mr-2">phone</span> Контакты
      </a>
    </div>
  </div>

  <!-- Правый блок -->
  <div class="w-full h-4/5 md:w-2/3 relative rounded-lg overflow-hidden shadow-lg">
    <img
      src={schoolInfo.image.asset.url}
      alt="Фотография"
      class="object-cover w-full h-full"
    />
    <div class="absolute bottom-4 right-4 text-white text-xl md:text-3xl font-extrabold bg-black bg-opacity-50 p-4 rounded-lg">
      <p>{schoolInfo.quote}</p>
      <p class="text-sm md:text-lg font-normal mt-2">
        {schoolInfo.author}
      </p>
    </div>
  </div>
</div>

<script>
  const toggleButton = document.getElementById('toggleButton');
  const documentList = document.getElementById('documentList');
  const arrowIcon = document.getElementById('arrowIcon');

  toggleButton.addEventListener('click', () => {
    const isOpen = documentList.style.opacity === '1';
    documentList.style.opacity = isOpen ? '0' : '1';
    arrowIcon.style.transform = isOpen ? 'rotate(90deg)' : 'rotate(180deg)';
  });
</script>
